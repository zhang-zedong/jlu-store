<div class="col-md-2">
  <div class="thumbnail">
    <%= link_to product_path(product) do %>
      <% if !product.image.blank? %>
        <%= image_tag product.image.url(:thumb) %>
      <% else %>
        <%= image_tag "http://placehold.it/200x200?text=No Pic" %>
      <% end %>
      <div class="caption text-center">
        <h4><%= product.title %> - Â¥ <%= product.price %></h4>
      </div>
    <% end %>
  </div>
</div>
